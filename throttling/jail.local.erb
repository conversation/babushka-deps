[DEFAULT]
destemail = dev@theconversation.edu.au
bantime  = 600
maxretry = 3

[nginx-badbots]
enabled = true
action = %(action_mwl)s
port    = http,https
filter  = nginx-badbots
logpath = /opt/nginx/logs/access.log

[nginx-noscript]
enabled = true
action = %(action_mwl)s
port    = http,https
filter  = nginx-noscript
logpath = /opt/nginx/logs/access.log

[tc-too-many-signups]
enabled = true
port    = http,https
filter  = user-signup
logpath = /srv/http/theconversation.com/current/log/<%= env %>.concise.log
findtime = 300
bantime = 3600
