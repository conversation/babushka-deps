[Unit]
Description=<%= description %>
After=network.target

[Service]
Type=simple
User=<%= setuid %>
Environment=<%= environment.map { |a| "\"#{a}\"" }.join(" ") %>
<% if pid_file %>
PIDFile=<%= pid_file %>
<% end %>
WorkingDirectory=<%= chdir %>
<% if respawn[/^y/] %>
Restart=on-failure
<% end %>
ExecStart=<%= command %>
<% if reload_command %>
ExecReload=<%= reload_command %>
<% end %>
<% if kill_signal %>
KillSignal=<%= kill_signal %>
<% end %>

[Install]
WantedBy=multi-user.target
