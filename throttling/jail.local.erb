[DEFAULT]
destemail = dev@theconversation.edu.au
maxretry = 3
bantime  = 10

# Send an email including logging when a ban is triggered.
action = %(action_mwl)s

[nginx-badbots]
enabled = true
port    = http,https
filter  = nginx-badbots
logpath = /opt/nginx/logs/access.log

[nginx-noscript]
enabled = true
port    = http,https
filter  = nginx-noscript
logpath = /opt/nginx/logs/access.log

[tc-too-many-signups]
enabled = true
port    = http,https
filter  = user-signup
logpath = /srv/http/theconversation.com/current/log/<%= env %>.concise.log
maxretry = 10
findtime = 600
