# nginx

description "nginx http daemon"
author "George Shammas <georgyo@gmail.com>"

start on (filesystem and static-network-up)
stop on runlevel [!2345]

env DAEMON=<%= nginx_bin %>
env PID=<%= nginx_pid %>

expect fork

pre-start script
  $DAEMON -t
  if [ $? -ne 0 ]; then
    exit $?
  fi
end script

exec $DAEMON
