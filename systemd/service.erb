[Unit]
Description=<%= description %>
After=network.target

[Service]
Type=simple
User=<%= setuid %>
WorkingDirectory=<%= chdir %>
Environment=<%= environment.map { |a| "\"#{a}\"" }.join(" ") %>
ExecStart=<%= command %>
<% if respawn[/^y/] %>
Restart=on-failure
<% end %>

[Install]
WantedBy=multi-user.target
